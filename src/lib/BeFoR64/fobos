[modes]
modes = shared-gnu static-gnu tests-gnu
        shared-gnu-debug static-gnu-debug tests-gnu-debug
        shared-intel static-intel tests-intel
        shared-intel-debug static-intel-debug tests-intel-debug

[common-variables]
$CSHARED_GNU = -cpp -c -fPIC -frealloc-lhs
$CSHARED_INT = -cpp -c -fpic -assume realloc_lhs
$LSHARED     = -shared
$CSTATIC_GNU = -cpp -c -frealloc-lhs
$CSTATIC_INT = -cpp -c -assume realloc_lhs
$DEBUG_GNU   = -Og -g3 -Warray-bounds -Wcharacter-truncation -Wline-truncation -Wimplicit-interface -Wimplicit-procedure -Wunderflow -Wuninitialized -fcheck=all -fmodule-private -ffree-line-length-132 -fimplicit-none -fbacktrace -fdump-core -finit-real=nan -std=f2008 -fall-intrinsics
$DEBUG_INT   = -O0 -debug all -check all -warn all -extend-source 132 -traceback -gen-interfaces#-fpe-all=0 -fp-stack-check -fstack-protector-all -ftrapuv -no-ftz -std03
$OPTIMIZE    = -O2
$EXDIRS      = PENF/src/tests/

# main modes
[shared-gnu]
template  = template-shared-gnu
target    = src/befor64.F90
build_dir = ./shared/
output    = libbase64.so
mklib     = shared

[static-gnu]
template  = template-static-gnu
target    = src/befor64.F90
build_dir = ./static/
output    = libbase64.a
mklib     = static

[tests-gnu]
template  = template-static-gnu
build_dir = ./exe/

[shared-gnu-debug]
template  = template-shared-gnu-debug
target    = src/befor64.F90
build_dir = ./shared/
output    = libbase64.so
mklib     = shared

[static-gnu-debug]
template  = template-static-gnu-debug
target    = src/befor64.F90
build_dir = ./static/
